<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.t_robop.masatsuna.calculator.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/display"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark"
        android:gravity="bottom|right"
        android:background="#999999"
        android:textSize="80dp"
        android:layout_above="@+id/buttonClear" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/button0"
        android:textSize="50sp"
        android:layout_alignTop="@+id/buttonTen"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:onClick="click0" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/button1"
        android:textSize="50sp"
        android:onClick="click1"
        android:layout_above="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/button2"
        android:textSize="50sp"
        android:layout_above="@+id/buttonTen"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:onClick="click2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/button3"
        android:textSize="50sp"
        android:onClick="click3"
        android:layout_above="@+id/buttonEqual"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/button4"
        android:textSize="50sp"
        android:onClick="click4"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/button5"
        android:textSize="50sp"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:onClick="click5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/button6"
        android:textSize="50sp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:onClick="click6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/button7"
        android:textSize="50sp"
        android:onClick="click7"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/button8"
        android:textSize="50sp"
        android:onClick="click8"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/button9"
        android:textSize="50sp"
        android:onClick="click9"
        android:layout_below="@+id/buttonDivide"
        android:layout_toLeftOf="@+id/buttonMinus"
        android:layout_toStartOf="@+id/buttonMinus" />

    <Button
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:textSize="50sp"
        android:onClick="clickPlus"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_below="@+id/button6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:textSize="50sp"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:onClick="clickMinus" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/buttonTen"
        android:textSize="50sp"
        android:layout_below="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:onClick="clickTen" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:id="@+id/buttonClear"
        android:textSize="50sp"
        android:onClick="clickClear"
        android:layout_above="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/buttonEqual"
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonTen"
        android:layout_toEndOf="@+id/buttonTen"
        android:onClick="clickEqual" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="ร"
        android:id="@+id/buttonMultiply"
        android:textSize="50sp"
        android:onClick="clickMultiply"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="รท"
        android:id="@+id/buttonDivide"
        android:textSize="50sp"
        android:onClick="clickDivide"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/display"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

</RelativeLayout>
